<thead>
  <tr>
    <th></th>
    <th>name</th>
    <th></th>
    <th>comment</th>
  </tr>
</thead>
<tbody>
  <tr>
  <% posts.comments.each do |comment| %>
    <td></td>
    <td><%= comment.user.name %></td>
    <td></td>
    <td><%= comment.comment %></td>
    <% if comment.user_id == current_user.id %>
    <td><%= link_to "削除", post_comments_path(comment), method: :delete, remote: true %>
    <% end %>
    </td>
  </tr>
  <% end %>
</tbody>