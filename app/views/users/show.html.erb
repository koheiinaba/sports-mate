<div class="row">
  <div class="col-xs-1">
  </div>
  <div class="col-xs-2">
  <h2>マイページ</h2>
  <p><%= flash[:notice] %></p>
  <table class="table table-hover teble-inverse">
    <thead>
      <tr>
        <th>name</th>
        <th>email</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "退会する", user_path, method: :delete, class: "btn btn-sm btn-danger" %>
  </div>

  <div class="col-xs-1">
  </div>

  <div class="col-xs-7">
    <h3>マイクラブ</h3>
      <table class="table table-hover teble-inverse">
        <thead>
          <tr>
            <th>クラブ名</th>
            <th>クラブ説明</th>
            <th>ジャンル</th>
            <th>メールアドレス</th>
            <th>人数</th>
            <th>活動場所</th>
            <th>活動日時</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @clubs.each do |club| %>
            <td><%= link_to club.name, club_path(club.id) %></td>
            <td><%= club.introduction %></td>
            <td><%= club.category.name %></td>
            <td><%= club.email %></td>
            <td><%= club.member %></td>
            <td><%= club.place %></td>
            <td><%= club.time %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

　　<div class="col-xs-2">
　　</div>

    <div class="col-xs-7">
    <h3>マイ投稿</h3>
      <table class="table table-hover teble-inverse">
        <thead>
          <tr>
            <th></th>
            <th>投稿タイトル</th>
            <th>投稿内容</th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @clubs.each do |club| %>
            <% club.posts.each do |post| %>
            <td><%= club.name %></td>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.content %></td>
            <td>コメント数 : <%= post.comments.count %></td>
            <td>いいね数 : <%= post.favorites.count %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>