

<h1>ジャンル一覧</h1>

    <div class="row">

        <div class="col-xs-6">

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ジャンル</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |ca| %>
                <tr>
                   <td>
                   <%= ca.name %>
                   </td>
                   <td>
                    <%= link_to "編集する", edit_category_path(ca.id), class: "btn-sm btn-primary" %>
                   </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>