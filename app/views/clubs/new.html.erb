
<h2><strong>クラブ 新規登録画面</strong></h2><br>
<% if @club.errors.any? %>
   <h3><%= @club.errors.count %>errors prohibited this obj from being saved:</h3>
     <ul>
       <% @club.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
<% end %>

<div class="row">
	<%= form_for(@club) do |club| %>
	<div class="col-xs-3">
		<%= club.attachment_field :club_image %>
	</div>
	<div class="col-xs-8">
	  <div class="form-group row">
        <label for="club_name" class="col-sm-2 col-form-label">クラブ名</label>
        <div class="col-sm-10">
          <%= club.text_field :name %>
        </div>
    </div>
    <div class="form-group row">
        <label for="club_introduction" class="col-sm-2 col-form-label">クラブ説明</label>
        <div class="col-sm-10">
          <%= club.text_area :introduction, :size=>"20x5" %>
        </div>
    </div>
    <div class="form-group row">
        <label for="club_category" class="col-sm-2 col-form-label">ジャンル</label>
        <div class="col-sm-10">
          <%= club.select :category_id, Category.all.collect{ |c| [ c.name, c.id]} %>
        </div>
    </div>
    <div class="form-group row">
      <label for="club_email" class="col-sm-2 col-form-label">メールアドレス</label>
      <div class="col-sm-10">
        <%= club.text_field :email %>
      </div>
    </div>
    <div class="form-group row">
      <label for="club_member" class="col-sm-2 col-form-label">人数</label>
      <div class="col-sm-10">
        <%= club.text_area :member %>
      </div>
    </div>
    <div class="form-group row">
      <label for="club_place" class="col-sm-2 col-form-label">活動場所</label>
      <div class="col-sm-10">
        <%= club.text_area :place %>
      </div>
    </div>
    <div class="form-group row">
      <label for="club_time" class="col-sm-2 col-form-label">活動日時</label>
      <div class="col-sm-10">
        <%= club.text_area :time %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-7"></div>
      <%= club.submit "新規登録", class: "btn btn-primary" %><br>
      <%= link_to '一覧に戻る', clubs_path, class: "btn btn-dark" %>
	  </div>
	<% end %>
  </div>
</div>

