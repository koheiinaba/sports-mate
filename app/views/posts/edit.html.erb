<h1>投稿編集</h1>

  <h5>投稿画像</h5>
  <%= attachment_image_tag @post, :post_image, :fill, 200, 160, fallback: "no_image.jpg", id: :img_prev, class: "img_prev" %>
  <%= form_for(@post) do |f| %>
  <%= f.attachment_field :post_image, class: "btn btn-primary", id: :post_image %>

  <h5>タイトル</h5>
  <%= f.text_field :title %>

  <h5>投稿内容</h5>
  <%= f.text_area :content %>

  <br>
  <%= f.submit 'Update Book' %>

  <%= link_to "Show", post_path(@post) %>

  <%= link_to "Back", posts_path %>

  <% end %>

