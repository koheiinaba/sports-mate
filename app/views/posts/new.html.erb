<h2><strong>新規投稿画面</strong></h2><br>
<% if @post.errors.any? %>
   <h3><%= @post.errors.count %>errors prohibited this obj from being saved:</h3>
     <ul>
       <% @post.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
     </ul>
<% end %>
<div class="row">
	<%= form_for(@post) do |post| %>
  <div class="form-group row">
    <label for="post_club" class="col-sm-2 col-form-label">　クラブ</label>
    <div class="col-sm-10">
      <%= post.select :club_id, current_user.clubs.collect{ |c| [ c.name, c.id]} %>
    </div>
  </div>
	<div class="col-xs-3">
　　<%= post.attachment_field :post_image %>
　</div>
	<div class="col-xs-8">
	  <div class="form-group row">
        <label for="club_name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
          <%= post.text_field :title %>
        </div>
    </div>
    <div class="form-group row">
        <label for="club_introduction" class="col-sm-2 col-form-label">投稿内容</label>
        <div class="col-sm-10">
          <%= post.text_area :content %>
        </div>
    </div>
    <div class="row">
      <div class="col-sm-7"></div>
      <%= post.submit "新規投稿", class: "btn btn-primary" %>
	</div>
    <% end %>
</div>
<%= link_to 'Back', posts_path %>
