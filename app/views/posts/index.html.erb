<% if user_signed_in? %>
　<div class="search-form">
  　<%= form_tag(search_path, method: :get) do %>
    　<%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "ユーザ名" => "ユーザ名", "クラブ名" => "クラブ名", "投稿タイトル" => "投稿タイトル" }) %>
      <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "部分一致" => "partical"  }) %>
      <%= submit_tag '検索', class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>

<br>
<div class="col-xs-12">
  <h2>投稿一覧</h2>
  <br>
  <table class="table table-hover teble-inverse">
    <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td>
          <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:'50x50', format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          </td>
          <td><%= post.club.name %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <% if user_signed_in? %>
          <td>
            <div id="favorites_buttons_<%= post.id %>">
              <%= render partial: 'favorites/favorite', locals: { post: post} %>
            </div>
          </td>
          <td>コメント数 : <%= post.comments.count %></td>
          <td><%= link_to '投稿詳細コメントする', post_path(post) %></td>
          <% if current_user.clubs.where(id: post.club_id).exists? %>
          <td><%= link_to '編集する', edit_post_path(post) %></td>
          <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>


<br>

<div class="row">
  <% if user_signed_in? %>
  <div class="new"></div>
  <%= link_to "新規投稿する", new_post_path, class: "btn btn-success"  %>
  <% end %>
</div>
