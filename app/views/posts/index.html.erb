<% if user_signed_in? %>
　<div class="search-form">
  　<%= form_tag(search_path, method: :get) do %>
    　<%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "User" => "ユーザ名", "Club" => "クラブ名", "Post" => "投稿タイトル" }) %>
      <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "部分一致" => "partical"  }) %>
      <%= submit_tag '検索', class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>

<div class="col-xs-9">
    <h2>投稿一覧</h2>
    <table class="table table-hover teble-inverse">
      <thead>
      <tr>
        <th></th>
        <th>クラブ名</th>
        <th>タイトル</th>
        <th>投稿内容</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <% @posts.each do |post| %>
          <td>
          <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:'50x50', format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          </td>
          <td><%= post.club.name %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td>
            <div id="favorites_buttons_<%= post.id %>">
              <%= render partial: 'favorites/favorite', locals: { post: post} %>
            </div>
          </td>
           <td>コメント数 : <%= post.comments.count %></td>
          <td><%= link_to '投稿詳細コメントする', post_path(post) %></td>
          <td><%= link_to '編集', edit_post_path(post) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-sm-7"></div>
  <%= link_to "新規投稿する", new_post_path, class: "btn btn-primary"  %>
</div>
