

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>クラブ名</th>
      <th>投稿タイトル</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :post_image, size:'50x50', format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
        </td>
        <td><%= post.club_id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to '投稿詳細', post_path %></td>
        <td><%= link_to '投稿編集', edit_post_path(post) %></td>
        <td><%= link_to "削除する", post_path, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="col-sm-7"></div>
  <%= link_to "新規投稿する", new_post_path, class: "btn btn-primary"  %>
</div>
